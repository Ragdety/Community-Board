@page
@model CommunityBoard.FrontEnd.Pages.Authentication.LoginModel
@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/custom.css" />

<section>
    <div class="signup-form">
        <form method="POST" autocomplete="off">
            <h2>Login</h2>
            <p>Login to start posting or contact!</p>
            <hr>

            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <div class="form-group">
                <input type="text"
                       class="form-control"
                       asp-for="EmailOrUsername"
                       placeholder="Username or Email"
                       required>
            </div>
            <div class="form-group">
                <input type="password"
                       class="form-control"
                       asp-for="Password"
                       placeholder="Password"
                       required>
            </div>
            <div class="form-group">
                <button type="submit"
                        class="btn btn-primary btn-lg transition-opacity">
                    Log In
                </button>
            </div>
            <hr />
            <div class="hint-text text-black">
                Don't have an account?
                <a asp-page="/Authentication/Register" class="text-black-50 text-primary">
                    Register here
                </a>
            </div>
        </form>
    </div>
</section>