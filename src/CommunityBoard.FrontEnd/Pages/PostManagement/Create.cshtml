@page
@model CommunityBoard.FrontEnd.Pages.PostManagement.CreateModel
@{
    ViewData["Title"] = "Create";
}

@using CommunityBoard.Core.Enums;

<link rel="stylesheet" href="~/css/custom.css" />

<div class="d-flex justify-content-center">
    <form method="POST"
          autocomplete="off"
          enctype="multipart/form-data"
          id="create-announcement"
          class="w-75 p-3 text-center signup-form ">
        <h2>Create Announcement</h2>
        <hr class="w-75 text-center m-auto pb-3" />

        <!--To Display Model Errors-->
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="form-group">
            <input type="text"
                   class="form-control"
                   asp-for="Name"
                   placeholder="Name"
                   required>
        </div>
        <div class="form-group">
            <select class="form-control"
                    asp-for="Type"
                    asp-items="@Html.GetEnumSelectList<AnnouncementType>()">
                <option disabled selected> -- Announcement Type -- </option>
            </select>
        </div>
        <div class="form-group">
            <div class="form-control d-flex flex-row">
                <label class="float-left pr-2">Picture:  </label>
                <input type="file"
                       accept="image/x-png, image/jpeg, image/jpg, image/png"
                       asp-for="ImageFile"
                       value="Upload Image">
            </div>
        </div>
        <div class="form-group">
            <textarea class="form-control"
                      asp-for="Description"
                      required
                      form="create-announcement"
                      placeholder="Description"
                      rows="8"></textarea>
        </div>
        <div class="form-group">
            <button type="submit"
                    class="btn btn-primary btn-lg transition-opacity">
                Create
            </button>
        </div>
    </form>
</div>

<style>
    textarea {
        resize: none
    }
</style>