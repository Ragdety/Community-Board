@page
@model CommunityBoard.FrontEnd.Pages.PostManagement.CreateModel
@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/custom.css" />

<div class="d-flex justify-content-center">
    <form method="POST"
          autocomplete="off"
          id="create-announcement"
          class="w-75 p-3 text-center signup-form ">
        <h2>Create Announcement</h2>
        <hr class="w-75 text-center m-auto pb-3" />
        <div class="form-group">
            <input type="text"
                   class="form-control"
                   name="announcement-name"
                   placeholder="Name"
                   required>
        </div>
        <div class="form-group">
            <select class="form-control">
                <option disabled selected> -- Announcement Type -- </option>
                <option>Sale</option>
                <option>Club</option>
                <option>School Event</option>
                <option>Tutoring Offer</option>
                <option>Job Offer</option>
            </select>
        </div>
        <div class="form-group">
            <div class="form-control d-flex flex-row">
                <label class="float-left pr-2">Picture:  </label>
                <input type="file"
                       name="announcement-image"
                       value="Upload Image">
            </div>
        </div>
        <div class="form-group">
            <textarea class="form-control"
                        name="announcement-description"
                        required
                        form="create-announcement"
                        placeholder="Description"
                        rows="8"></textarea>
        </div>
        <div class="form-group">
            <button type="submit"
                    class="btn btn-primary btn-lg transition-opacity">
                Send
            </button>
        </div>
    </form>
</div>

<style>
    textarea {
        resize: none
    }
</style>