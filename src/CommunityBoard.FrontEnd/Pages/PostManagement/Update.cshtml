@page "{id}"
@model CommunityBoard.FrontEnd.Pages.PostManagement.UpdateModel
@{
	ViewData["Title"] = "Update";
}
@using CommunityBoard.Core.Enums;

<link rel="stylesheet" href="~/css/custom.css" />

<div class="d-flex justify-content-center">
	<form method="POST"
		  autocomplete="off"
		  enctype="multipart/form-data"
		  id="update-announcement"
		  class="w-75 p-3 text-center signup-form ">
		<h2>Update Announcement</h2>
		<p>If you don't want to change the picture, leave the picture blank.</p>
		<hr class="w-75 text-center m-auto pb-3" />

		@Html.ValidationSummary(false, "", new { @class = "text-danger" })
		<div class="form-group">
			<input type="text"
				   class="form-control"
				   asp-for="Name"
                   maxlength="80"
				   placeholder="Name"
				   required>
		</div>
		<div class="form-group">
			<select class="form-control"
					asp-for="Type"
					asp-items="@Html.GetEnumSelectList<AnnouncementType>()">
				<option disabled selected> -- Announcement Type -- </option>
			</select>
		</div>
		<div class="form-group">
			<div class="form-control d-flex flex-row">
				<label class="float-left pr-2">Picture:  </label>
				<input type="file"
					   accept="image/x-png, image/jpeg, image/jpg, image/png"
					   asp-for="ImageFile"
					   value="Upload Image">
			</div>
		</div>
		<div class="form-group">
			<textarea class="form-control"
					  asp-for="Description"
                      maxlength="300"
					  required
					  form="update-announcement"
					  placeholder="Description"
					  rows="8"></textarea>
		</div>
		@Html.HiddenFor(x => x.CurrentAnnouncementId)
		<div class="form-group">
			<button type="submit"
					class="btn btn-primary btn-lg transition-opacity">
				Update
			</button>
		</div>
	</form>
</div>

<style>
	textarea {
		resize: none
	}
</style>